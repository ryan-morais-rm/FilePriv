generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int       @id @default(autoincrement())
  nome     String    @db.VarChar(100)
  email    String    @unique @db.VarChar(100)
  senha    String    @db.VarChar(255)
  arquivos Arquivo[]

  @@map("usuarios")
}

model Arquivo {
  id           Int       @id @default(autoincrement())
  nome_arquivo String    @db.VarChar(255)
  descricao    String    @db.VarChar(255)
  caminho      String    @db.VarChar(255)
  usuario_id   Int?
  data_upload  DateTime? @default(now()) @db.Timestamp(6)
  usuario      Usuario?  @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("arquivos")
}
